  "compilerOptions": {
    "outDir": "./lib",
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "paths": {
      "@llamaindex/workflow-core": ["./src/core/index.ts"],
      "@llamaindex/workflow-core/async-context": [
